# Build stage
FROM golang:1.24-alpine AS builder
WORKDIR /build

COPY go.mod go.sum ./
RUN go mod download

COPY . .
RUN CGO_ENABLED=0 go build -ldflags="-s -w" -o api ./cmd/api

# Run stage
FROM alpine:3.20
WORKDIR /app
COPY --from=builder /build/api /app/api
EXPOSE 3001
# Override with PORT, ROUTE, SERVICE_NAME as needed
ENTRYPOINT ["/app/api"]
